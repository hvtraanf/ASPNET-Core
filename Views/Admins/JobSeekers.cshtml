@model IEnumerable<ASM.Models.JobSeeker>

@{
    ViewData["Title"] = "JobSeekers";
}

<h1>JobSeekers</h1>
@* 
<p>
    <a asp-action="Create">Create New</a>
</p> *@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fullname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fullname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Id)
            </td>
            <td>
                    <a asp-action="EditJobSeeker" asp-route-id="@item.JobSeekerId">Edit</a> |
                    <a asp-action="DetailsJobSeeker" asp-route-id="@item.JobSeekerId">Details</a> |
                <a asp-action="DeleteJobSeeker" asp-route-id="@item.JobSeekerId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
